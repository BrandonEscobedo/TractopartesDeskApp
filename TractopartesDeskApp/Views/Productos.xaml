                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Grid>
            <Label Content="Nombre del Producto" HorizontalAlignment="Left" Margin="9,50,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20"/>
