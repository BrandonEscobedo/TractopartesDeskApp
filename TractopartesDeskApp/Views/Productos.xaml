                <RowDefinition Height="30"/>
                <RowDefinition Height="200*"/>
                <RowDefinition Height="143*"/>
                <RowDefinition Height="422*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                           Text="Registrar Productos"
                           Foreground="White"
