<UserControl x:Class="TractopartesDeskApp.Views.UserControls.BtnAddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TractopartesDeskApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="210">
    <StackPanel >
        <Grid>
            <Button x:Name="btnEnviar" Margin="0,0,0,-30"
                    Height="auto"
                    Width="auto"
Background="#FF71FF00"
BorderThickness="0"
Content="Enviar"
Foreground="Black"
Command="{Binding UpdateSourceTrigger=PropertyChanged}"
FontSize="16"
FontFamily="Montserrat"
Cursor="Hand"
BorderBrush="#FF191919" Click="btnEnviar_Click"
    />
        </Grid>
    </StackPanel>
</UserControl>
