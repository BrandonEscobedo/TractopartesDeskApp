<UserControl x:Class="TractopartesDeskApp.Views.UserControls.Carad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TractopartesDeskApp.Views.UserControls"
             mc:Ignorable="d" 
          >
    <Border Margin="10 0" Style="{StaticResource whiteBorder}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image  Width="30" Height="30" Margin="0 0 10 0"/>
                <TextBlock Text="Busqueda Avanzada" Style="{StaticResource titleText}"/>
            </StackPanel>

            <TextBlock  Style="{StaticResource secondaryText}"/>

        </StackPanel>
    </Border>
</UserControl>
