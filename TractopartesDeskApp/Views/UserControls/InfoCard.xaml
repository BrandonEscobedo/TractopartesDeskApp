<UserControl x:Class="TractopartesDeskApp.Views.UserControls.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TractopartesDeskApp.Views.UserControls"
             mc:Ignorable="d" 
             Name="infoCard"
            >
    <Border Margin="10 0" Style="{StaticResource whiteBorderInfo}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ElementName=infoCard,Path=Image}" Width="50" Height="50" Margin="0 0 10 0"/>
                <TextBlock Text="{Binding ElementName=infoCard,Path=Title}" Style="{StaticResource titleTextInfo}"/>
            </StackPanel>

            <TextBlock Text="{Binding ElementName=infoCard,Path=SubTitle}" Style="{StaticResource secondaryTextInfo}"/>

            <Slider x:Name="slide" Margin="0 5 0 0" IsSelectionRangeEnabled="True"
                    Value="{Binding ElementName=infoCard,Path=Amount}" SelectionEnd="{Binding ElementName=slider,Path=Value}" Style="{DynamicResource SliderStyle1}"/>
        </StackPanel>
    </Border>
</UserControl>
